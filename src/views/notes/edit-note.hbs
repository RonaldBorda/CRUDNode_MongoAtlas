<div class="col-md-6 mx-auto">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title text-center p-4">Editar historia</h4>
            <form action="/notes/edit-note/{{note._id}}?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <div class="form-floating mb-3">
                        <input type="text" name="title" class="form-control" value="{{note.title}}" required>
                        <label for="floatingInput">Titulo</label>
                    </div>
                    <div class="form-floating mb-3">
                        <input type="text" name="site" class="form-control" value="{{note.site}}" required>
                        <label for="floatingInput">Lugar</label>
                    </div>
                    <div class="form-floating">
                        <textarea class="form-control" name="description" rows="3" style="height: 150px;" required>{{note.description}}</textarea>
                        <label for="floatingPassword">Descripcion</label>
                    </div><br>
                    <div class="row d-flex justify-content-center">
                        <button class="btn btn-success col-md-5" type="submit">Guardar</button>
                    </div>
                </div>
        </div>
    </div>
    </form>
</div>